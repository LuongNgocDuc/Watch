<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_main"
    tools:context=".RegisterAccountActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333934"/>
    <ImageView
        android:id="@+id/img_register"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tool_bar_register"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_img"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_capture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/tool_bar_register"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/img_register"
        android:src="@mipmap/capture_icon"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/img_capture"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/img_register"
        android:src="@mipmap/folder_icon"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_register"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_register"
            android:text="Account"
            android:textStyle="bold"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <EditText
            android:drawableLeft="@mipmap/user_icon"
            android:id="@+id/edt_account_register"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_edt"
            android:hint="Account"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields" />

        <TextView
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_register"
            android:layout_marginTop="5dp"
            android:text="Password"
            android:textStyle="bold"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <EditText
            android:drawableLeft="@mipmap/lock_icon"
            android:id="@+id/edt_password_register"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_edt"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_register"
            android:layout_marginTop="5dp"
            android:text="Confirm Password"
            android:textStyle="bold"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <EditText
            android:id="@+id/edt_confirm_password_register"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_edt"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:drawableLeft="@mipmap/lock_icon"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_register"
            android:layout_marginTop="5dp"
            android:text="Email or Tel"
            android:textStyle="bold"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <EditText
            android:drawableLeft="@mipmap/email_icon"
            android:id="@+id/edt_email_register"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_edt"
            android:hint="Email or Tel"

            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_btn"
            android:drawableLeft="@mipmap/smile_icon"
            android:padding="3dp"
            android:paddingRight="22dp"
            android:text="Register"
            android:textColor="#ffff"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
    </LinearLayout>
</RelativeLayout>